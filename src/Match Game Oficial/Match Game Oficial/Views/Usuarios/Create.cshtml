<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

@model Match_Game_Oficial.Models.Usuario

@{
    ViewData["Title"] = "Cadastro de Usuários";
}

<main class="main-cadastro">

    <h1>REALIZE SEU CADASTRO</h1>

    <p>Preencha os campos solicitados abaixo para realizar seu cadastro com sucesso.</p>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Qual seu nome?<span style="color: #FF0000">*</span></label>
                    <input asp-for="Nome" class="form-control" placeholder="Joaquim da Silva" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Qual seu melhor e-mail?<span style="color: #FF0000">*</span></label>
                    <input asp-for="Email" class="form-control" placeholder="joaquimdasilva@gmail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Data_Nascimento" class="control-label">Data de nascimento<span style="color: #FF0000">*</span></label>
                    <input asp-for="Data_Nascimento" class="form-control" />
                    <span asp-validation-for="Data_Nascimento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label">Escolha sua senha<span style="color: #FF0000">*</span></label>
                    <input asp-for="Senha" type="password" class="form-control" placeholder="**********" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Foto" class="control-label"></label>
                    <input asp-for="Foto" type="file" name="File" class="form-control" />
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="REALIZAR CADASTRO" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <p>Já possui uma conta? <a asp-area="" asp-controller="Usuarios" asp-action="login">Realize o login</a></p>
    </div>

</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

